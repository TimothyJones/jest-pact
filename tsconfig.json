{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "rootDir": "./src",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "esModuleInterop": true
  },
  "exclude": ["./node_modules/*"],
  "include": ["./src/**/*.ts"]
}
